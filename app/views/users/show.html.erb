<h1 align="center"> Welcome to <%= @user.username %>'s page</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user %>
  </div>
<div class="col-md-4 col-md-offset-4 center">
  <strong>Username:</strong>
  <%= @user.username %>
</div>

<div class="col-md-4 col-md-offset-4 center">
  <strong>Email:</strong>
  <%= @user.email %>
</div>

<div class="col-md-4 col-md-offset-4 center">
  <%= @user.username %>'s discussions:</h4>
  <%= render 'discussions/discussion', obj: @user.discussions %>
</div>
<div align="center">
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', signup_path %>
</div>
