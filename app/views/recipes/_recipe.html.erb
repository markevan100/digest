

    <% obj.each do |recipe| %>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <div class="well well-lg">
            <div class="recipe-title">
              <%= link_to recipe.title, recipe_path(recipe) %>
            </div>
            <div class="recipe-body">
                <%= truncate(recipe.article, length: 100) %>
            </div>
            <% if logged_in? && (current_user == recipe.user || current_user.admin?) %>
              <div class="recipe-actions">
                <%= link_to "Edit this topic", edit_recipe_path(recipe), class: "btn btn-xs btn-success", id: "butt" %>
                <%= link_to "Delete this topic", recipe_path(recipe), method: :delete,
                          data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger", id: "butt" %>
              </div>
            <% end %>

            <%= recipe.user.username %>
          </div>
        </div>
      </div>
    <% end %>
