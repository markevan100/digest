<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="control-label col-md-1">
      <%= f.label :category %>
    </div>
    <div class="col-md-11">
      <%= f.text_field :name, class: 'form-control', placeholder: "Category name", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-1 col-md-11">
      <%= f.submit class: 'btn btn-primary btn-lg pull-right' %>
    </div>
  </div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to "Cancel request and return to home page", welcome_home_path %> ]
</div>
